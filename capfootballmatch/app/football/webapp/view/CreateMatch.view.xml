<mvc:View
    controllerName="cap.euro.admin.football.controller.CreateMatch"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <ObjectPageLayout
        id="matchResultObjectPageLayout"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <heading>
                    <m:Title text="New Match" />
                </heading>
                <navigationActions>
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="handleClose"
                        id="exitFullScreenBtn"
                        tooltip="Exit Full Screen Mode"
                    />
                </navigationActions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <sections>
            <ObjectPageSection
                titleUppercase="false"
                id="MatchInformation"
                title="MatchInformation"
            >
                <subSections>
                    <ObjectPageSubSection titleUppercase="false">
                        <form:SimpleForm
                            editable="true"
                            layout="ColumnLayout"
                            columnsM="3"
                            columnsL="3"
                            columnsXL="3"
                        >
                            <form:content>
                                <core:Title text="General" />
                                <m:Label text="Home" />
                                <m:ComboBox
                                    id="selectTeam1"
                                    showSecondaryValues="true"
                                    items="{ path: 'mainModel>/Teams' }"
                                    change="handleTeamChange"
                                >
                                    <core:ListItem
                                        text="{mainModel>team_name}"
                                        additionalText="{mainModel>team_id}"
                                    />
                                </m:ComboBox>
                                <m:Label text="Away" />
                                <m:ComboBox
                                    id="selectTeam2"
                                    showSecondaryValues="true"
                                    items="{ path: 'mainModel>/Teams' }"
                                    change="handleTeamChange"
                                >
                                    <core:ListItem
                                        text="{mainModel>team_name}"
                                        additionalText="{mainModel>team_id}"
                                    />
                                </m:ComboBox>
                                <core:Title text="" />
                                <m:Label text="Match Day" />
                                <m:DateTimePicker
                                    id="matchDateTimeDTP"
                                    value="{
                                        path:'{viewModel>/match_time}',
                                        formatOptions: {
                                            style: 'medium',
                                            strictParsing: true
                                        }
                                    }"
                                />
                            </form:content>
                        </form:SimpleForm>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
        <footer>
            <m:OverflowToolbar id="otbFooter">
                <m:ToolbarSpacer />
                <m:Button
                    type="Accept"
                    text="Save"
                    press="handleSave"
                />
                <m:Button
                    type="Reject"
                    text="Discard"
                    press="handleClose"
                />
            </m:OverflowToolbar>
        </footer>
    </ObjectPageLayout>
</mvc:View>

<mvc:View
    controllerName="cap.euro.admin.football.controller.MatchList"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage
        id="page"
        headerExpanded="{/headerExpanded}"
    >
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterBar"
                        useToolbar="false"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="Search"
                                label="Search"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        value="{viewModel>/searchFieldValue}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Match Status"
                                label="Match Status"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        forceSelection="false"
                                        selectedKey="{viewModel>/matchStatusKey}"
                                        items="{
                                            path: '/ProductCollection',
                                            sorter: { path: 'Name' }
                                        }"
                                    >
                                        <core:Item
                                            key="{ProductId}"
                                            text="{Name}"
                                        />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="MatchDay"
                                label="Match Day"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        value="{
                                        'path': 'viewModel>/matchDayValue',
                                        'type': 'sap.ui.model.type.Date',
                                        'formatOptions': {
                                            'pattern': 'dd/MM/yyyy'
                                        }
                                    }"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="table"
                inset="false"
                mode="SingleSelectLeft"
                items="{
						path: 'mainModel>/Matches',
                        parameters: {
                            expand: 'team1,team2'
                        }
					}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Matches"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            tooltip="Create"
                            text="Create"
                            press="handleCreateButtonPressed"
                        />
                        <Button
                            tooltip="Delete"
                            text="Delete"
                            press="handleDeleteButtonPressed"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match No." />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Date of March" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match Time" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Home" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Away" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match Status" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        type="Active"
                        press="onItemPress"
                    >
                        <cells>
                            <Text text="{mainModel>match_name}" />
                            <Text
                                text="{
				        path: 'mainModel>match_time',
				        type: 'sap.ui.model.odata.type.DateTimeOffset',
				        formatOptions: {
				          pattern: 'dd/MM/yyyy'
				        }
				      }"
                            />
                            <Text
                                text="{
				        path:'mainModel>match_time',  
                        type: 'sap.ui.model.odata.type.DateTimeOffset',
                        formatOptions: {  
                            pattern : 'HH:mm'
                        }
				      }"
                            />
                            <Text text="{mainModel>team1/team_name}" />
                            <Text text="{mainModel>team2/team_name}" />
                            <Text text="{mainModel>status}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>

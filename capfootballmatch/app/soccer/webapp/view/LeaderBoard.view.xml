<mvc:View
    controllerName="cap.euro.bettor.soccer.controller.LeaderBoard"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    core:require="{formatter: 'cap/euro/bettor/soccer/model/formatter'}"
>
    <f:DynamicPage
        id="page"
    >
        <f:header>
        
            <f:DynamicPageHeader>
                <f:content>
                 <VBox>
                    <fb:FilterBar
                        id="filterBar"
                        useToolbar="false"
                        search=".onFilterList"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="Search"
                                label="Search"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        value="{local>/searchFieldValue}"
                                        placeholder="Search by Player Name"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
            	<FlexBox
				height="100px"
				alignItems="Center"
				justifyContent="Center">
                <Image src="https://cdn.tinhtd.info/aisc/leaderboard.png" width="100px"></Image>
			</FlexBox>
            </VBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="leaderBoard"
                inset="false"
                items="{path: 'mainModel>/LeaderBoards'}"
                enableBusyIndicator="true"
                updateFinished="onLeaderBoardUpdateFinished"
            >
                <headerToolbar>
                    <OverflowToolbar>
                       <Title
                            text="Leader Board"
                            level="H2"
                        />
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        width="8rem"
                        demandPopin="true"
                    >
                        <Text text="Rank" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Player Name" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Player Email" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Winning" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Current Score" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        type="Active"
                        press="onItemPress"
                    >
                        <cells>
                            <tnt:InfoLabel
                            text="#{mainModel>rank}"
                            colorScheme= "{ path: 'mainModel>rank',formatter: 'formatter.fnGetLeaderBoardState'}" />
                            <HBox alignItems="Center">
                                <Avatar
                                src="{ path: 'mainModel>rank',formatter: 'formatter.fnGetLeaderBoardBadge'}"
                                displayShape="Square"
                                displaySize="L"
                                class="sapUiSmallMarginTop"/>
                                <Text text="{mainModel>userFullName}" />
                            </HBox>
                          
                            <Text text="{mainModel>userEmail}" />
                           
                            <ObjectNumber
                            number="{mainModel>winning}"
                            unit="Match"
                            state="{path: 'mainModel>rank',formatter: 'formatter.fnGetLeaderBoardObjectState' }" />
                            <ObjectNumber
                            number="{mainModel>currentPoints}"
                            unit="Point"
                            state="{path: 'mainModel>rank',formatter: 'formatter.fnGetLeaderBoardObjectState' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>

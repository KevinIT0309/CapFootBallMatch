<mvc:View
    controllerName="cap.euro.bettor.soccer.controller.LeaderBoard"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage
        id="page"
    >
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterBar"
                        useToolbar="false"
                        search=".onSearch"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="Search"
                                label="Search"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        value="{viewModel>/searchFieldValue}"
                                        placeholder="Search by player"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="table"
                inset="false"
                items="{local>/leaderBoards}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Leader Board"
                            level="H2"
                        />
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Rank" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Player Name" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Player Email" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Winning" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Current Score" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        type="Active"
                        press="onItemPress"
                    >
                        <cells>
                            <Text text="{local>rank}" />
                            <Text text="{local>playerName}" />
                            <Text text="{local>playerEmail}" />
                            <Text text="{local>winning}" />
                            <Text text="{local>score}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>

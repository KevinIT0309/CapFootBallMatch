<mvc:View
    controllerName="cap.euro.bettor.soccer.controller.MatchList"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    core:require="{formatter: 'cap/euro/bettor/soccer/model/formatter'}"
>
    <f:DynamicPage id="page">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterBar"
                        useToolbar="false"
                        search=".onSearch"
                    >
                        <fb:filterGroupItems>
                            <!-- <fb:FilterGroupItem
                                name="Search"
                                label="Search"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        value="{viewModel>/searchFieldValue}"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem> -->
                            <fb:FilterGroupItem
                                name="MatchDay"
                                label="Match Day"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        change="handleMatchDayValueChange"
                                        value="{
                                        'path': 'viewModel>/matchDayValue',
                                        'type': 'sap.ui.model.odata.type.DateTimeOffset',
                                        'formatOptions': {
                                            'pattern': 'dd/MM/yyyy',
                                            'strictParsing': true,
                                            'UTC': true
                                        }
                                    }"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="table"
                inset="false"
                items="{viewModel>/matchesBets}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Matches"
                            level="H2"
                        />
                        <!-- <ToolbarSpacer /> -->
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        width="4rem"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match Id." />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match No." />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Date of March" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match Time" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Home" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Away" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match Status" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Your Bet" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Team Win" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Match Result" />
                    </Column>
                </columns>

                <items>
                    
                    <ColumnListItem
                        vAlign="Middle"
                        type="Active"
                        press="onItemPress"
                    >
                        <customData>
                            <core:CustomData
                                    key="isOver"
                                    value="{isOver}"
                            />
                        </customData>
                        <cells>
                            <Text text="{viewModel>match_id}" />
                            <Text text="{viewModel>match_name}" />
                            <Text
                                text="{
				        path: 'viewModel>match_time',
				        type: 'sap.ui.model.odata.type.DateTimeOffset',
				        formatOptions: {
				          pattern: 'dd/MM/yyyy'
				        }
				      }"
                            />
                            <Text
                                text="{
				        path:'viewModel>match_time',  
                        type: 'sap.ui.model.odata.type.DateTimeOffset',
                        formatOptions: {  
                            pattern : 'HH:mm'
                        }
				      }"
                            />
                            <Text text="{viewModel>team1_Name}" />
                            <Text text="{viewModel>team2_Name}" />
                        <ObjectStatus
                        text="{ path: 'viewModel>status',formatter: 'formatter.fnGetMatchStatusText'}"
                        state="{ path: 'viewModel>status',formatter: 'formatter.fnGetMatchStatusState'}"
                        class="sapMObjectStatusLarge"
                        />
                        <VBox>
                            <tnt:InfoLabel text="Draw"  colorScheme="7"  visible="{= ${
                           parts: [
                                'viewModel>isDraw',
                                'viewModel>team_win_ID_bet'
						    ],
                            formatter: 'formatter.fnIsVisiblePlayerBetDrawResult'
                        }}"/>
                            <tnt:InfoLabel text="{viewModel>team_win_Name_bet}" colorScheme="1"  visible="{= ${
                           parts: [
                                'viewModel>isDraw',
                                'viewModel>team_win_ID_bet'
						    ],
                            formatter: 'formatter.fnIsVisiblePlayerBetTeamWinResult'
                        }}"/>
                        </VBox>
                        <VBox>
                            <tnt:InfoLabel text="Waiting result" colorScheme="6" visible="{= ${viewModel>status} !== 3 }"/>

                            <tnt:InfoLabel text="Draw"  colorScheme="7"  visible="{=${viewModel>status} === 3 &amp;&amp; ${
                           parts: [
                                'viewModel>team_win_ID',
                                'viewModel>team1_score',
                                'viewModel>team2_score',
                                'viewModel>status'
						    ],
                            formatter: 'formatter.fnIsMatchResultDraw'
                        }}"/>
                            <tnt:InfoLabel text="{viewModel>team_win_Name}" colorScheme="1"  visible="{= !${
                           parts: [
                                'viewModel>team_win_ID',
                                'viewModel>team1_score',
                                'viewModel>team2_score',
                                'viewModel>status'
                                
						    ],
                            formatter: 'formatter.fnIsMatchResultDraw'
                        }}"/>
                        </VBox>
                     <ObjectStatus
                        text="{
                           parts: [
                                'viewModel>team1_score',
                                'viewModel>team2_score',
                                'viewModel>status'
						    ],
                            formatter: 'formatter.fnGetMatchResultText'
                        }"
                        state="{ path: 'viewModel>status',formatter: 'formatter.fnGetMatchStatusState'}"
                        class="sapMObjectStatusLarge"
                        />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
